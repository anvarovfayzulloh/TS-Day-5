{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src/ts",
    "outDir": "./dist/js", 
    "lib": ["esnext", "dom"],                                  
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,          
     "strict": true,
    "skipLibCheck": true                            
  },
  "include": [
    "src/**/*.ts"
  ]
}
